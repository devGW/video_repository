mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play#jsPlayIcon
                span
                    |00:00 / 10:00
            .videoPlayer__column
                span#jsVolumeButton
                    i.fas.fa-volume-up#jsMuteIcon
                span#jsScreenButton
                    i.fas.fa-compress
