mixin videoPlayer(video={})
    .videoPlayer
        video(src=`/${video.src}`,autoplay)
        .videoPlayer__controls
            .videoPlayer__column
                span
                    i.fas.fa-play
                span
                    |00:00 / 10:00
            .videoPlayer__column
                span
                    i.fas.fa-volume-up
                span
                    i.fas.fa-compress
