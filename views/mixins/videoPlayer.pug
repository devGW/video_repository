mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play#jsPlayIcon
                span#currentTime 00:00:00
                |/
                span#totalTime 00:00:00
            .videoPlayer__column
                span#jsVolumeButton
                    i.fas.fa-volume-up#jsMuteIcon
                span#jsScreenButton
                    i.fas.fa-compress
