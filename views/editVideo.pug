extends layouts/main.pug

block content
    form__container
        form(action=routes.editVideo(video.id), method="post")
           input(type="text", placeholder="Title" name="title" value=video.title)
           textarea(name="description", cols="25", rows="5")=video.description
           input(type="submit" value="Update Video")
        a.form-container__link(href=routes.deleteVideo(video.id)) Delete Video